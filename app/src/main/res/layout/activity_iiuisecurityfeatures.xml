<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    android:background="@drawable/gradient_background5"
    tools:context=".iiuisecurityfeatures">
<include layout="@layout/appbar"/>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/logobtn"
    android:src="@drawable/zz"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/relative"
        android:layout_marginTop="55dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imagebtn7"
            android:layout_width="131dp"
            android:layout_height="90dp"
            android:layout_marginTop="20sp"
            android:background="#57C28C"
            android:src="@drawable/ic_baseline_call_2412" />

        <ImageButton
            android:id="@+id/imagebtn8"
            android:layout_width="131dp"
            android:layout_height="90dp"
            android:layout_marginTop="20sp"
            android:background="#57C28C"
            android:src="@drawable/ic_baseline_timer_24" />

        <ImageButton
            android:id="@+id/imagebtn9"
            android:layout_width="155dp"
            android:layout_height="90dp"
            android:layout_marginTop="20sp"
            android:background="#57C28C"
            android:padding="10sp"
            android:src="@drawable/ic_baseline_location_city_241" />

    </LinearLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="press for information"
    android:id="@+id/informbtn"
    android:backgroundTint="#57C28C"
    android:padding="20sp"
    android:layout_marginTop="5sp"
    android:layout_below="@id/linear"/>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="390dp"
        android:textSize="18sp"
        android:textColor="#191A1A"
        android:layout_height="wrap_content"
        android:layout_below="@id/informbtn" />

    <androidx.cardview.widget.CardView
        android:id="@+id/aidbtn"
        android:layout_width="180sp"
        android:layout_height="139dp"
        android:layout_below="@id/informbtn"
        android:layout_marginTop="88sp"
        android:layout_marginLeft="15sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        app:cardBackgroundColor="#32B898">
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="139dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="200dp"
                android:id="@+id/image5"
                android:layout_height="197dp"
                android:src="@drawable/ic_baseline_local_hospital_24"/>

            <ProgressBar
                android:id="@+id/progessbar2"
                android:layout_width="330dp"
                android:visibility="gone"
                android:layout_height="182dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/secbtn"
        android:layout_width="180dp"
        android:layout_height="139dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="340sp"
        android:layout_toRightOf="@id/aidbtn"
        android:background="#7CB342"
        android:paddingLeft="20dp"
        android:src="@drawable/ic_baseline_call_24" />

    <ImageButton
        android:id="@+id/emerbtn"
        android:layout_width="191dp"
        android:layout_height="176dp"
        android:layout_below="@id/secbtn"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:background="#ECE47E5D"
        android:src="@drawable/ic_baseline_report_problem_2411" />

    <ImageButton
        android:id="@+id/sec2btn"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="496sp"
        android:layout_toRightOf="@id/emerbtn"
        android:backgroundTint="#6CA1BB"
        android:padding="50sp"
        android:src="@drawable/ic_baseline_directions_bus_24100"
        android:paddingLeft="20dp"
        android:text="COVID 19"
        android:textSize="20sp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chating"
        android:layout_width="183dp"
        android:layout_height="1008dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_baseline_chat_2412" />
</RelativeLayout>