<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createprofile">

    <ImageButton
        android:id="@+id/arrow2"
        android:layout_width="110dp"
        android:layout_height="107dp"
        android:background="#0D0C0C"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:layout_marginTop="5sp"
        android:gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/th" />
    <androidx.cardview.widget.CardView
        android:layout_width="170sp"
        android:layout_height="170sp"
        android:layout_marginTop="175sp"
        android:layout_marginLeft="30sp"
        android:id="@+id/cardview"
        app:cardCornerRadius="60sp"
        app:cardElevation="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="20dp"
            android:id="@+id/profileimg"
            android:src="@drawable/ic_baseline_person_24">

        </de.hdodenhof.circleimageview.CircleImageView>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="60sp"
        android:backgroundTint="#309B6C"
        android:layout_below="@id/cardview"
        android:id="@+id/userprofiledetails"
        android:text="Profile Details"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:layout_height="60sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:backgroundTint="#309B6C"
        android:id="@+id/useraddressdetail"
        android:layout_below="@id/userprofiledetails"
        android:text="Address Details"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:layout_height="60sp"/>
</RelativeLayout>