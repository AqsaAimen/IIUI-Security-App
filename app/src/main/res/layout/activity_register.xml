<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageButton
        android:layout_width="61dp"
        android:layout_height="39dp"
        android:id="@+id/arrow1"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="#FBFBFD" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="392dp"
        android:layout_height="178dp"
        android:layout_marginTop="5sp"
        android:paddingTop="15sp"
        android:src="@drawable/iiui" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputemail"
        android:layout_marginTop="20sp"
        android:paddingTop="10sp"
        android:hint="Enter your Email"
        android:paddingLeft="10sp"
        android:layout_below="@id/imageview"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittextemail"
            android:background="#F6F4FA">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputpassword"
        android:layout_marginTop="10sp"
        android:paddingTop="10sp"
        android:hint="Enter Password"
        android:paddingLeft="10sp"
        android:layout_below="@id/inputemail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittextpassword"
            android:background="#F6F4FA">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputconfirmpass"
        android:layout_marginTop="10sp"
        android:paddingTop="10sp"
        android:hint="Confirm Password"
        android:paddingLeft="10sp"
        android:layout_below="@id/inputpassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittextconfirmpass"
            android:background="#F6F4FA">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createaccountbtn"
        android:layout_below="@id/inputconfirmpass"
        android:text="Create Account"
        android:textSize="20sp"
        android:layout_marginTop="15sp"
        android:backgroundTint="#309B6C"
        />
</RelativeLayout>