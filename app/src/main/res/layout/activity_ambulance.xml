<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background5"
    android:orientation="vertical"
    tools:context=".Ambulance">
    <include layout="@layout/appbar"/>

    <ImageView
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:contentDescription="TODO"
        android:src="@drawable/ambulance" />

    <ImageButton
        android:layout_width="138dp"
        android:layout_height="118dp"
        android:id="@+id/emergency"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45sp"
        android:background="#EE706D"
        android:src="@drawable/ic_baseline_report_problem_24" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="25sp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#EAF1F0"
        android:text="In Case of Emergency Press above button"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="35sp"
            android:background="#5BBDB2"
            android:paddingLeft="80sp"
            android:textScaleX="1"
            android:layout_gravity="center_horizontal"
            android:text="@string/call_ambulance"
            android:drawableStart="@drawable/ic_baseline_call_2412"
            android:drawableLeft="@drawable/ic_baseline_call_2412"
            android:id="@+id/security"
            android:paddingTop="10sp"
            android:textAlignment="center"
            android:textColor="#F2F6F9"
            android:textSize="25dp" />


    <TextView
        android:id="@+id/b9"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15sp"
        android:background="#F4A979"
        android:paddingLeft="80sp"
        android:textAlignment="center"
        android:paddingTop="15sp"
        android:drawableStart="@drawable/ic_baseline_call_2412"
        android:text="Call 999"
        android:textScaleX="1.5"
        android:layout_marginLeft="2sp"
        android:textColor="#F5EFEC"
        android:textSize="25dp"
        android:drawableLeft="@drawable/ic_baseline_call_2412" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatting"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="330sp"
        android:src="@drawable/ic_baseline_chat_2412" />

</LinearLayout>