<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/relative"
    tools:context=".Report_A_tip">
    <include
        layout="@layout/appbar1"/>

    <TextView
        android:id="@+id/edittext"
        android:layout_width="381dp"
        android:layout_height="52sp"
        android:layout_below="@id/relative"
        android:layout_marginTop="60sp"
        android:gravity="center_horizontal"
        android:paddingTop="10sp"
        android:text="Incidience Date"
        android:textAlignment="center"
        android:textColor="#306430"
        android:textSize="25sp">
    </TextView>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/t1"
        android:hint="date here"
        android:textSize="30sp"
        android:layout_below="@id/edittext"/>


    <Button
        android:id="@+id/b1"
        android:layout_width="382dp"
        android:layout_height="45dp"
        android:layout_below="@id/t1"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="3sp"
        android:background="#267330"
        android:text="Set Date"
        android:textColor="#F0F9F0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textviewtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_marginTop="32sp"
        android:drawableTop="@drawable/ic_baseline_access_time_24"
        android:drawablePadding="5sp"
        android:text=" Time show here"
        android:textColor="#215523"
        android:textSize="29dp"
        />
    <Button
        android:id="@+id/b2"
        android:layout_width="382dp"
        android:layout_height="38dp"
        android:layout_below="@id/textviewtime"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="3sp"
        android:background="#267330"
        android:text="Set Time "
        android:textColor="#F0F9F0"
        android:textSize="25sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:id="@+id/name"
        android:text="Reported by"
        android:textSize="25sp"
        android:textColor="#295E29"
        android:layout_below="@id/textviewtime"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namedittext"
        android:layout_below="@id/name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notify"
        android:textSize="30sp"
        android:textColor="#2E6B24"
        android:text="Was an agency or authority notified?"
        android:layout_below="@id/namedittext"/>


    <Button
        android:id="@+id/btn1"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/notify"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="15sp"
        android:background="#2B6825"
        android:padding="10sp"
        android:text="Yes"
        android:textColor="#EBE8F1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/notify"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="10sp"
        android:layout_toRightOf="@id/btn1"
        android:background="#2B6825"
        android:padding="10sp"
        android:text="No"
        android:textColor="#EBE8F1"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/severity"
        android:text="Severity Rate"
        android:textSize="30sp"
        android:textColor="#2F682B"
        android:layout_marginTop="10sp"
        android:layout_below="@id/btn2"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group"
        android:layout_marginTop="5sp"
        android:layout_below="@id/severity">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Critical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2C6828"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marginal"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:textColor="#2C6828"/>
    </RadioGroup>
    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/btn7"
        android:gravity="center_horizontal"
        android:background="#286821"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="3sp"
        android:text="Submit"
        android:textSize="30sp"
        android:textColor="#F2F0F6"
        android:layout_below="@+id/group"/>


</RelativeLayout>