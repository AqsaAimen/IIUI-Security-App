<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AidAlert"
    android:background="@drawable/gradient_background5"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text1"
        android:layout_width="446dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="15sp"
        android:gravity="center_horizontal"
        android:text="Mental Health"
        android:textColor="#F5EFEF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/mybtn"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:layout_below="@id/text1"
        android:layout_marginLeft="5sp"
        android:backgroundTint="#E7E4EC"
        android:text="show anamously"
        android:textColor="#F2EDF6"
        android:textSize="20sp" />
    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchbtn"
        android:textOff="OFF"
        android:textOn="On"
        android:layout_marginTop="60sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="40sp"
        android:layout_toRightOf="@id/mybtn"/>
    <TextView
        android:id="@+id/mybtn2"
        android:layout_width="287dp"
        android:layout_height="45dp"
        android:layout_below="@id/switchbtn"
        android:layout_marginLeft="10sp"
        android:backgroundTint="#E7E4EC"
        android:text="show Location"
        android:textColor="#F2EDF6"
        android:textSize="20sp" />
    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchbtn2"
        android:textOff="OFF"
        android:textOn="On"
        android:layout_marginTop="100sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="40sp"
        android:layout_toRightOf="@id/mybtn2"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/switchbtn2"
        android:layout_marginTop="0sp"
        app:cardBackgroundColor="#309B6C">
        <RelativeLayout
            android:layout_width="460dp"
            android:id="@+id/relative"
            android:layout_marginLeft="10sp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="277dp"
                android:layout_height="150dp"
                android:layout_marginLeft="180sp"
                android:src="@drawable/map" />
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Send by"
                android:textColor="#F1EFF5"
                android:textSize="25dp" />
            <EditText
                android:layout_width="190sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_marginTop="10sp"
                android:hint="name here"
                android:textSize="20sp"
                android:textColor="#EDF1EC"
                android:id="@+id/edittext"/>
            <TextView
                android:layout_width="270dp"
                android:layout_height="50sp"
                android:id="@+id/textview4"
                android:hint="address here"
                android:textSize="15sp"
                android:textColor="#F0F5EE"
                android:layout_marginTop="20sp"
                android:layout_below="@id/edittext"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:id="@+id/b3"
        android:background="#EFECF4"
        android:layout_marginTop="10sp"
        android:layout_below="@id/cardview1"/>

    <TextView
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@+id/b3"
        android:layout_marginTop="10sp"
        android:background="#E78659"
        android:gravity="center_horizontal"
        android:drawableStart="@drawable/ic_baseline_photo_camera_24"
        android:text="Add Photo"
        android:textColor="#EFF8F5"
        android:textSize="30sp"
        android:drawableLeft="@drawable/ic_baseline_photo_camera_24" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/image"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/b1"/>

    <TextView
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@id/image"
        android:layout_marginTop="5dp"
        android:paddingTop="13sp"
        android:background="#7AC9B4"
        android:drawableStart="@drawable/ic_baseline_call_2412"
        android:drawableLeft="@drawable/ic_baseline_call_2412"
        android:gravity="center_horizontal"
        android:text="Report"
        android:textSize="25dp" />
</RelativeLayout>