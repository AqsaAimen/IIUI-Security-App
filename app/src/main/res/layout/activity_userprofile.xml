<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Userprofile">
    <androidx.cardview.widget.CardView
        android:layout_width="170sp"
        android:layout_height="170sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="110sp"
        android:id="@+id/cardview"
        app:cardCornerRadius="60sp"
        app:cardElevation="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="20dp"
            android:id="@+id/profileimg"
            android:src="@drawable/ic_baseline_person_24">

        </de.hdodenhof.circleimageview.CircleImageView>
    </androidx.cardview.widget.CardView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview"
        android:layout_marginTop="10sp"
        android:textColorHint="#151515"
        android:hint="Name"
        android:id="@+id/name"
        android:textSize="25sp"
        android:drawableLeft="@drawable/ic_baseline_person_24"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="10sp"
        android:hint="Profession"
        android:id="@+id/profession"
        android:textSize="25sp"
        android:textColorHint="#131414"
        android:drawableLeft="@drawable/ic_baseline_school_24"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profession"
        android:layout_marginTop="10sp"
        android:hint="Bio"
        android:id="@+id/bio"
        android:textSize="25sp"
        android:textColorHint="#131414"
        android:drawableLeft="@drawable/ic_baseline_accessibility_24"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio"
        android:layout_marginTop="10sp"
        android:hint="Email"
        android:id="@+id/email"
        android:textSize="25sp"
        android:textColorHint="#131414"
        android:drawableLeft="@drawable/ic_baseline_email_24"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="10sp"
        android:hint="Website"
        android:id="@+id/website"
        android:textSize="25sp"
        android:textColorHint="#131414"
        android:drawableLeft="@drawable/ic_baseline_web_24"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:id="@+id/save"
        android:text="Save profile"
        android:layout_below="@id/website"
        android:backgroundTint="#309B6C"
        android:textSize="30sp"
        android:textColor="#ECF5EF"/>
</RelativeLayout>