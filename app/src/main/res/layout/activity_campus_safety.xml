<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background5"
    tools:context=".CampusSafety">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/safeiiui"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:background="@drawable/background"
            android:gravity="center_horizontal"
            android:text="University Safety"
            android:textAlignment="inherit"
            android:textColor="#F5F2F9"
            android:textDirection="firstStrong"
            android:textSize="40sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/safeiiui2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="University Safety"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="20sp"
            android:textSize="40sp"
            android:textStyle="normal"
            android:textColor="#0F0F10"
            android:layout_below="@id/safeiiui"/>
        <TextView
            android:layout_below="@id/safeiiui2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="10sp"
            android:textColor="#2D2D30"
            android:id="@+id/hhh"
            android:textSize="20dp"
            android:text="University Campus are generally safe place in which to live
study and socialise ,however it is sensible to take precautions and minimise any risk to your own safety"/>
        <TextView
            android:id="@+id/bbb"
            android:layout_below="@id/hhh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="8sp"
            android:textColor="#2B2B2F"
            android:textSize="20dp"
            android:text="When you first arrive at University,be aware that the local customs and culture may
be different compared to  your home town or country"/>
        <TextView
            android:id="@+id/hhh1"
            android:layout_below="@id/bbb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="8sp"
            android:textColor="#2B2B2F"
            android:textSize="20dp"
            android:text="We must all take some responsibility for our own safety "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ggg"
            android:layout_below="@id/hhh1"
            android:text="Build your own resilience "
            android:layout_marginLeft="8sp"
            android:layout_marginTop="8sp"
            android:textColor="#0E0E0E"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_below="@id/ggg"
            android:id="@+id/iii"
            android:textSize="20sp"
            android:paddingLeft="5sp"
            android:layout_marginLeft="8sp"
            android:textColor="#282729"
            android:text="1   Become language_proficient"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:id="@+id/mmm"
            android:layout_below="@id/iii"
            android:textSize="20sp"
            android:paddingLeft="5sp"
            android:layout_marginLeft="8sp"
            android:textColor="#282729"
            android:text="2   Find your way around the university "/>
        <TextView
            android:id="@+id/kkk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_below="@id/mmm"
            android:textSize="20sp"
            android:paddingLeft="5sp"
            android:layout_marginLeft="8sp"
            android:textColor="#282729"
            android:text="3   During COVID situation you should keep distance of 6 feet from other "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_below="@id/kkk"
            android:textSize="20sp"
            android:id="@+id/nnn"
            android:paddingLeft="5sp"
            android:layout_marginLeft="8sp"
            android:textColor="#282729"
            android:text="4   Wear mask daily and sanitize your hands 2 3 times a day  "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_below="@id/nnn"
            android:id="@+id/lll"
            android:textSize="20sp"
            android:paddingLeft="5sp"
            android:layout_marginLeft="8sp"
            android:textColor="#282729"
            android:text="5   Donot unplug wires in computer labs they can cause electric shocks      "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_below="@id/lll"
            android:textSize="20sp"
            android:paddingLeft="5sp"
            android:layout_marginLeft="8sp"
            android:textColor="#282729"
            android:text="6   Smoking is prohibited inside the campus  "/>
    </RelativeLayout>

</ScrollView>